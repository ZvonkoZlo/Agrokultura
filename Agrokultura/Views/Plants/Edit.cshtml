@model Agrokultura.Models.Plant

@{
    ViewData["Title"] = "Edit";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite biljku:</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label">Ime:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Description" class="control-label">Opis:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="SubspeciesName" class="control-label">Naziv podvrste:</label>
                <input asp-for="SubspeciesName" class="form-control" />
                <span asp-validation-for="SubspeciesName" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="AmountOfGoods" class="control-label">Količina dobara koju biljka daje:</label>
                <input asp-for="AmountOfGoods" class="form-control" />
                <span asp-validation-for="AmountOfGoods" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Price" class="control-label">Cijena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PlantTypeId" class="control-label">Vrsta biljke: </label>
                <select asp-for="PlantTypeId" class="form-control" asp-items="ViewBag.PlantTypeId"></select>
                <span asp-validation-for="PlantTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="GoodsTypeId" class="control-label">Vrsta dobra: </label>
                <select asp-for="GoodsTypeId" class="form-control" asp-items="ViewBag.GoodsTypeId"></select>
                <span asp-validation-for="GoodsTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ManufacturerId" class="control-label">Proizvođač:</label>
                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Color" class="control-label">Boja:</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Uredi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>