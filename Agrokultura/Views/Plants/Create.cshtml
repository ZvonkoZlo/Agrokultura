@model Agrokultura.Models.Plant

@{
    ViewData["Title"] = "Create";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Kreiraj novu biljku!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label">Ime:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Description" class="control-label">Opis:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="SubspeciesName" class="control-label">Naziv vrste:</label>
                <input asp-for="SubspeciesName" class="form-control" />
                <span asp-validation-for="SubspeciesName" class="text-danger"></span>
            </div>
        
            <div class="form-group form-group-update_create">
                <label asp-for="Price" class="control-label">Cijena biljke:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PlantTypeId" class="control-label">Vrsta biljke:</label>
                <select asp-for="PlantTypeId" class="form-control" asp-items="ViewBag.PlantTypeId"><option value="" disabled selected>Odaberite vrstu biljke</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="GoodsTypeId" class="control-label">Vrsta dobara koje biljka daje: </label>
                <select asp-for="GoodsTypeId" class="form-control" asp-items="ViewBag.GoodsTypeId"><option value="" disabled selected>Odaberite vrstu dobara</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="AmountOfGoods" class="control-label">Količina dobara koje biljka daje (kg):</label>
                <input asp-for="AmountOfGoods" class="form-control" />
                <span asp-validation-for="AmountOfGoods" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ManufacturerId" class="control-label">Proizvođač:</label>
                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"><option value="" disabled selected>Odaberite proizvođača</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Color" class="control-label">Boja:</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Kreiraj" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>