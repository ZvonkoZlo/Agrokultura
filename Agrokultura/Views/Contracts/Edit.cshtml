@model Agrokultura.Models.Contract

@{
    ViewData["Title"] = "Edit";
}
<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite ugovor :</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label">Naziv:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ProviderId" class="control-label">Vlasnik:</label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="BeneficiaryId" class="control-label">Iznajmljivač:</label>
                <select asp-for="BeneficiaryId" class="form-control" asp-items="ViewBag.BeneficiaryId"></select>
                <span asp-validation-for="BeneficiaryId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="DateOfConclusion" class="control-label">Datum sklapanja ugovora:</label>
                <input asp-for="DateOfConclusion" class="form-control" />
                <span asp-validation-for="DateOfConclusion" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="DateOfExpiration" class="control-label">Datum isteka ugovora:</label>
                <input asp-for="DateOfExpiration" class="form-control" />
                <span asp-validation-for="DateOfExpiration" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ContractType" class="control-label">Tip ugovora:</label>
                <input asp-for="ContractType" class="form-control" />
                <span asp-validation-for="ContractType" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Uredi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>
