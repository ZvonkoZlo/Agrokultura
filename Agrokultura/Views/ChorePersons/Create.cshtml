@model Agrokultura.Models.ChorePerson

@{
    ViewData["Title"] = "Create";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Dodaj zadatak osobi!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group-update_create">
                <label asp-for="Description" class="control-label">Opis rada:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ChoreId" class="control-label">Posao: </label>
                <select asp-for="ChoreId" class="form-control" asp-items="ViewBag.ChoreId">
                    <option value="" disabled selected>Odaberite Posao!</option>
                </select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PersonId" class="control-label">Izvršitelj:</label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId">
                    <option value="" disabled selected>Odaverite Izvršitelja posla!</option>
                </select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="OrderStatusId" class="control-label">*Status posla: *</label>
                <select asp-for="OrderStatusId" class ="form-control" asp-items="ViewBag.OrderStatusId">
                    <option value="" disabled selected>Odaberite status posla!</option>
                </select>
            </div>       
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Kreiraj!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>

