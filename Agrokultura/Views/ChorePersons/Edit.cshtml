@model Agrokultura.Models.ChorePerson

@{
    ViewData["Title"] = "Edit";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite osobu i zadatak:</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="OrderStatusId" class="control-label">*Status posla* - (bi trebao biti)</label>
                <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatusId"></select>
                <span asp-validation-for="OrderStatusId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="ChoreId" class="control-label">Posao</label>
                <select asp-for="ChoreId" class="form-control" asp-items="ViewBag.ChoreId"></select>
                <span asp-validation-for="ChoreId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PersonId" class="control-label">Izvršitelj:</label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Uredi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>


