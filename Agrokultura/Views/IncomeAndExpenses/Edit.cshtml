@model Agrokultura.Models.IncomeAndExpense

@{
    ViewData["Title"] = "Edit";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite prihode i troškove:</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="PlotId" class="control-label">Parcela: </label>
                <select asp-for="PlotId" class="form-control" asp-items="ViewBag.PlotId"></select>
                <span asp-validation-for="PlotId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PlantId" class="control-label">Biljka: </label>
                <select asp-for="PlantId" class="form-control" asp-items="ViewBag.PlantId"></select>
                <span asp-validation-for="PlantId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="AmountOfPlants" class="control-label">Količina biljaka:</label>
                <input asp-for="AmountOfPlants" class="form-control" />
                <span asp-validation-for="AmountOfPlants" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Price" class="control-label">Cijena:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="DateOfPlanting" class="control-label">Datum sadnje:</label>
                <input asp-for="DateOfPlanting" class="form-control" />
                <span asp-validation-for="DateOfPlanting" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="EndDateOfPlanting" class="control-label">Dan kraja sadnje: </label>
                <input asp-for="EndDateOfPlanting" class="form-control" />
                <span asp-validation-for="EndDateOfPlanting" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="AmountOfGoods" class="control-label">Količina dobara: </label>
                <input asp-for="AmountOfGoods" class="form-control" />
                <span asp-validation-for="AmountOfGoods" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Uredi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>