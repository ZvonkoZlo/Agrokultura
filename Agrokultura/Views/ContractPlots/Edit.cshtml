@model Agrokultura.Models.ContractPlot

@{
    ViewData["Title"] = "Edit";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite ugovor:</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="ContractId" class="control-label">Ugovor:</label>
                <select asp-for="ContractId" class="form-control" asp-items="ViewBag.Contracts"></select>
                <span asp-validation-for="ContractId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PlotId" class="control-label">Zemljište:</label>
                <select asp-for="PlotId" class="form-control" asp-items="ViewBag.Plots"></select>
                <span asp-validation-for="PlotId" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="MonthlyPayment" class="control-label">Mjesečna uplata:</label>
                <input asp-for="MonthlyPayment" class="form-control" />
                <span asp-validation-for="MonthlyPayment" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Price" class="control-label">Cijena:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Uredi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>
