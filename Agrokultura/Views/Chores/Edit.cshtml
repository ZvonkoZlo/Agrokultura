@model Agrokultura.Models.Chore

@{
    ViewData["Title"] = "Edit";
}
<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Uredite posao: @Model.Name</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label">Naziv: </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Description" class="control-label">Opis:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Duration" class="control-label">Trajanje u minutama: </label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Spremi!" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a asp-action="Index">Natrag</a>
        </div>
    </div>
</div>



