@model Agrokultura.Models.Person

@{
    ViewData["Title"] = "Create";
}
<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Kreiraj novi posao!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group form-group-update_create">
                <label asp-for="FullName" class="control-label">Ime i prezime:</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PhoneNumber" class="control-label">Broj telefona:</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="Adress" class="control-label">Adresa:</label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="CityId" class="control-label">Grad: </label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"><option value="" disabled selected>Odaberite grad</option></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="RoleId" class="control-label">Uloga: </label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"><option value="" disabled selected>Odaberite ulogu</option></select>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Kreiraj" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>