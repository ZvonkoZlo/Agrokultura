@model Agrokultura.Models.Order

@{
    ViewData["Title"] = "Create";
}

<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Kreiraj novu narudžbu!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group form-group-update_create">
                <label asp-for="AmountOfGoods" class="control-label">Količina:</label>
                <input asp-for="AmountOfGoods" class="form-control" />
                <span asp-validation-for="AmountOfGoods" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="CustomerId" class="control-label">Korisnik:</label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PlantId" class="control-label">Biljka:</label>
                <select asp-for="PlantId" class ="form-control" asp-items="ViewBag.PlantId"></select>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="OrderStatusId" class="control-label">Status narudžbe:</label>
                <select asp-for="OrderStatusId" class ="form-control" asp-items="ViewBag.OrderStatusId"></select>
            </div>
            <div class="form-group submit-update_create me-auto">
                <input type="submit" value="Kreiraj" class="btn" />
            </div>
        </form>
        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>