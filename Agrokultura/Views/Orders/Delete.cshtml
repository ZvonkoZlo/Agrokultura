@model Agrokultura.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<div class="col-update_create">
    <h1>Izbrisati</h1>

    <h3>Jeste li sigurni da želite ovo izbrisati?</h3>
    <div>
        <h4>Narudžba</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Količina robe:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AmountOfGoods)
            </dd>
            <dt class="col-sm-2">
                Kupac: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FullName)
            </dd>
            <dt class="col-sm-2">
                Stanje narudžbe: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderStatus.Name)
            </dd>
            <dt class="col-sm-2">
                Biljka: 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Plant.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn back-to-list">
                <a href="javascript:history.back()">Natrag</a>
            </div>
            <input type="submit" value="Izbrisati" class="btn edit-data-btn delete-btn" />
        </form>
    </div>
</div>