@model Agrokultura.Models.City

@{
    ViewData["Title"] = "Create";
}
<style>

</style>


<div class="row row-udpate_create mx-auto">
    <div class="col-md-6 mx-auto col-update_create">
        <h1>Kreiraj novi grad!</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-group-update_create">
                <label asp-for="Name" class="control-label" >Naziv</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger validation-faled-text"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="PostalCode" class="control-label">Poštanski broj</label>
                <input asp-for="PostalCode" class="form-control" required data-val-required="Please enter the name."/>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group form-group-update_create">
                <label asp-for="CountryId" class="control-label">Država</label>
                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId" ><option value="" disabled selected>Odaberite državu</option></select>
            </div>
            <div class="form-group  submit-update_create me-auto">
                <input type="submit" value="Kreiraj!" class="btn" />
            </div>
        </form>

        <div class="btn back-to-list">
            <a href="javascript:history.back()">Natrag</a>
        </div>
    </div>
</div>
